# APEX Asia Property Exchange - Backend Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# Основные настройки
ENVIRONMENT=staging  # staging, staging, production
DEBUG=false
LOG_LEVEL=INFO

# amoCRM настройки
AMOCRM_CLIENT_ID=your_amocrm_client_id
AMOCRM_CLIENT_SECRET=your_amocrm_client_secret
AMOCRM_REDIRECT_URI=http://api.staging.apex-asia.com/api/auth/amo/callback
AMOCRM_REFRESH_TOKEN=your_amocrm_refresh_token
AMOCRM_DOMAIN=your_amocrm_domain
AMOCRM_WEBHOOK_SECRET=your_amocrm_webhook_secret

# База данных PostgreSQL
DB_URL=postgresql://asia:asia@db:5432/asia_crm_staging
DATABASE_URL=postgresql://asia:asia@db:5432/asia_crm_staging  # Альтернативное имя
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://redis:6379
REDIS_DB=0

# Frontend URL
FRONTEND_URL=http://staging.apex-asia.com

# Безопасность
SECRET_KEY=your-staging-secret-key-change-in-production
JWT_SECRET=your-staging-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS настройки (разделите запятыми)
ALLOWED_HOSTS_RAW=localhost,127.0.0.1,*.apex-asia.com
CORS_ORIGINS_RAW=http://staging.apex-asia.com,https://staging.apex-asia.com

# Email настройки (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=false
EMAIL_FROM=noreply@apex-asia.com

# WhatsApp настройки
WHATSAPP_API_URL=https://api.whatsapp.com/v1
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=+1234567890

# Telegram настройки
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_DEFAULT_CHAT_ID=your_telegram_chat_id

# API настройки
API_PREFIX=/api
API_VERSION=v1

# Мониторинг
ENABLE_METRICS=false
METRICS_PORT=9090

# Логирование
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# Кэширование
CACHE_TTL=3600  # 1 час
CACHE_PREFIX=apex:

# Уведомления
NOTIFICATION_QUEUE=notifications
NOTIFICATION_RETRY_ATTEMPTS=3

# Интеграции (включить/выключить)
ENABLE_AMOCRM=false
ENABLE_EMAIL=false
ENABLE_WHATSAPP=false
ENABLE_TELEGRAM=false
