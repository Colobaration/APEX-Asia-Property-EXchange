# Переменные окружения для CI/CD
# Эти переменные будут использоваться в GitHub Actions

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=${{ github.repository }}

# Версии
PYTHON_VERSION=3.11
NODE_VERSION=18

# Домены (замените на ваши)
STAGING_DOMAIN=staging.apex-asia.com
PRODUCTION_DOMAIN=apex-asia.com

# Kubernetes
KUBERNETES_VERSION=latest

# Тестирование
TEST_DATABASE_URL=postgresql://asia:asia@localhost:5432/asia_crm_test

# Безопасность
SAFETY_CHECK_ENABLED=true
TRIVY_SCAN_ENABLED=true

# Уведомления
SLACK_CHANNEL=#deployments
NOTIFICATION_ENABLED=true

# Кэширование
CACHE_ENABLED=true
CACHE_KEY_PREFIX=apex-asia

# Логирование
LOG_LEVEL=INFO
ENVIRONMENT=ci
