# APEX Asia Property Exchange - Staging Environment Variables for Portainer
# ======================================================================

# Основные настройки
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Порты сервисов
BACKEND_PORT=8001
DB_PORT=5433
REDIS_PORT=6380
NGINX_PORT=80
NGINX_SSL_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# База данных PostgreSQL
DB_USER=asia
DB_PASSWORD=asia_staging_secure_password_2024
DB_NAME=asia_crm_staging
DB_URL=postgresql://asia:asia_staging_secure_password_2024@db:5432/asia_crm_staging

# Redis
REDIS_PASSWORD=redis_staging_secure_password_2024
REDIS_URL=redis://:redis_staging_secure_password_2024@redis:6379

# Безопасность
SECRET_KEY=apex_staging_secret_key_2024_very_secure_random_string
JWT_SECRET=apex_staging_jwt_secret_2024_very_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# amoCRM интеграция
AMOCRM_CLIENT_ID=your_amocrm_client_id_here
AMOCRM_CLIENT_SECRET=your_amocrm_client_secret_here
AMOCRM_DOMAIN=your_domain.amocrm.ru
AMOCRM_REDIRECT_URI=http://staging.apex-asia.com/api/auth/amo/callback
AMOCRM_WEBHOOK_SECRET=your_amocrm_webhook_secret_here

# Frontend URL
FRONTEND_URL=http://staging.apex-asia.com

# CORS настройки
CORS_ORIGINS=http://localhost:3000,https://staging.apex-asia.com,https://www.staging.apex-asia.com

# Email настройки (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true
EMAIL_FROM=noreply@apex-asia.com

# WhatsApp настройки
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_PHONE_NUMBER=+1234567890

# Telegram настройки
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_DEFAULT_CHAT_ID=your_telegram_chat_id_here

# Grafana настройки
GRAFANA_PASSWORD=grafana_admin_password_2024

# Мониторинг
ENABLE_METRICS=true
METRICS_PORT=9090

# Кэширование
CACHE_TTL=3600
CACHE_PREFIX=apex:staging:

# Уведомления
NOTIFICATION_QUEUE=notifications
NOTIFICATION_RETRY_ATTEMPTS=3

# Интеграции (включить/выключить)
ENABLE_AMOCRM=true
ENABLE_EMAIL=false
ENABLE_WHATSAPP=false
ENABLE_TELEGRAM=false

# Логирование
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=app.log

# API настройки
API_PREFIX=/api
API_VERSION=v1

# Домены для Traefik
STAGING_DOMAIN=staging.apex-asia.com
API_DOMAIN=api.staging.apex-asia.com
